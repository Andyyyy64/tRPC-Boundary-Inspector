{
  "name": "trpc-boundary-inspector",
  "version": "0.1.0",
  "description": "Make tRPC network boundaries visible.",
  "type": "module",
  "main": "dist/packages/runtime/index.js",
  "module": "dist/packages/runtime/index.js",
  "types": "dist/packages/runtime/index.d.ts",
  "bin": {
    "trpc-boundary-inspector": "./dist/packages/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/packages/runtime/index.d.ts",
      "import": "./dist/packages/runtime/index.js",
      "default": "./dist/packages/runtime/index.js"
    },
    "./next": {
      "types": "./dist/packages/next/index.d.ts",
      "import": "./dist/packages/next/index.js",
      "default": "./dist/packages/next/index.js"
    },
    "./babel": {
      "types": "./dist/packages/babel/index.d.ts",
      "import": "./dist/packages/babel/index.js",
      "default": "./dist/packages/babel/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "next": [
        "dist/packages/next/index.d.ts"
      ],
      "babel": [
        "dist/packages/babel/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:swc-plugin && npm run build:copy-wasm",
    "build:ts": "tsc",
    "build:swc-plugin": "cd packages/swc-plugin && cargo build --release",
    "build:copy-wasm": "cp packages/swc-plugin/target/wasm32-wasip1/release/trpc_boundary_inspector_swc_plugin.wasm dist/packages/next/",
    "dev": "node --loader ts-node/esm packages/cli/index.ts",
    "check": "oxlint && tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "start": "node dist/runtime/src/index.js"
  },
  "keywords": [
    "trpc",
    "nextjs",
    "boundary",
    "inspector",
    "visualization"
  ],
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-typescript": "^7.27.1",
    "@babel/preset-typescript": "^7.26.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "globby": "^16.0.0",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@trpc/client": ">=10.0.0",
    "@trpc/server": ">=10.0.0"
  },
  "devDependencies": {
    "@babel/types": "^7.26.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "oxlint": "^1.34.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2"
  }
}
